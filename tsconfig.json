{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2018", "dom"],
    "outDir": "./out-tsc/app",
    "baseUrl": "./",
    "types": [
      "jest",
      "node"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "angularCompilerOptions": {
    "strictTemplates": true // Enable strict template type checking
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}